<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhaoyao.miaomiao.activity.AdActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:entries="@array/ad_spinner"
                android:gravity="center"
                android:spinnerMode="dialog"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开"/>

                    <RadioButton
                        android:id="@+id/rbClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="关"/>
                </RadioGroup>


                <CheckBox
                    android:id="@+id/cb_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多"/>

                <CheckBox
                    android:id="@+id/cb_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停"/>

                <CheckBox
                    android:id="@+id/cb_brush"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刷新"/>

                <TextView
                    android:id="@+id/tvRestart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="重启"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    />

                <CheckBox
                    android:id="@+id/cb_360"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="3"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/cb_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="谷歌"
                    android:visibility="gone"/>


                <CheckBox
                    android:id="@+id/cb_open10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="启10"/>

                <CheckBox
                    android:id="@+id/cb_open5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="启5"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvBrushInterstitialSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="5dp"
                android:text="开屏"
                android:textColor="@color/red"
                android:textSize="18sp"
                />

        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.percent.PercentFrameLayout
