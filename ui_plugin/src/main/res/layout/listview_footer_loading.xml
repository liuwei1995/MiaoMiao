<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <ProgressBar
        android:layout_margin="@dimen/base_margin"
        android:id="@+id/loading_progress_bar"
        android:layout_width="@dimen/progressbar_height"
        android:layout_height="@dimen/progressbar_height"
        android:indeterminateDrawable="@drawable/progress_bar_fox_tail" />

    <TextView
        android:layout_margin="@dimen/base_margin"
        android:layout_marginLeft="@dimen/loading_progress_bar_margin"
        android:id="@+id/loading_tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textColor="@color/base_color_black1"
        android:textSize="@dimen/base_font_size" />

</LinearLayout>